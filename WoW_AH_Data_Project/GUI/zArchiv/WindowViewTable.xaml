<Window x:Class="WoWAHDataProject.GUI.DatabaseGUI.WindowViewTable"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WoWAHDataProject.GUI.DatabaseGUI"
        mc:Ignorable="d"
        Title="WindowViewTable" Height="450" Width="800">
    <Grid>
        <Menu>
            <MenuItem Header="File">
                <MenuItem Header="Open" Click="MenuItem_Click"/>
                <MenuItem Header="Save" Click="MenuItem_Click"/>
                <MenuItem Header="Exit" Click="MenuItem_Click"/>
            </MenuItem>
            <MenuItem Header="Edit">
                <MenuItem Header="Copy" Click="MenuItem_Click"/>
                <MenuItem Header="Paste" Click="MenuItem_Click"/>
            </MenuItem>
        </Menu>
        <DataGrid x:Name="myDataGrid" ContextMenuOpening="MyDataGrid_ContextMenuOpening" Margin="0,20,0,0" AlternatingRowBackground="#FFD4D4D4" AlternationCount="2">
        </DataGrid>
    </Grid>
</Window>
