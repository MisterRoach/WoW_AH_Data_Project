<Window x:Class="WoWAHDataProject.GUI.Db.WindowImportMarketvaluesToDatabase"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WoWAHDataProject.GUI.Db"
        mc:Ignorable="d"
        Title="WindowImportMarketvaluesToDatabase" Height="265" Width="800">
    <Grid>
        <StackPanel Margin="50">
            <Label>Select TSM AppHelper path i.E "L:\WoW\World of Warcraft\_classic_\Interface\AddOns\TradeSkillMaster_AppHelper\AppData.lua" :</Label>
            <TextBox x:Name="TxtbSelectTsmAppHelperPath"></TextBox>
            <Button x:Name="BtnSelectTsmAppHelperPath" Click="BtnSelectTsmAppHelperPathClick" Margin="10" Height="35" Width="175">Choose TSM AppHelper Folder</Button>
            <Button x:Name="BtnStartMarketValuesImportToDb" Click="BtnStartMarketValuesImportToDbClick" IsEnabled="False" Margin="10" Height="35" Width="175">Convert Lua Data</Button>
        </StackPanel>
        <Image x:Name="bottomLeftImage" HorizontalAlignment="Left" Width="200" Height="200" Margin="22,150,0,16"/>
    </Grid>
</Window>
