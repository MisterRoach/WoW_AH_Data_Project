<Window x:Class="WoW_AH_Data_Project.CombineCSVsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WoW_AH_Data_Project"
        mc:Ignorable="d"
        Title="CombineCSVsWindow" Height="450" Width="800">
    <StackPanel Margin="50">
        <Label>Choose path of sales and puchases csv files :</Label>
        <TextBox x:Name="Txtb_sel_csvs_path"></TextBox>
        <Button x:Name="Btn_sel_csvs_path" Click="Btn_sel_csvs_path_Click" Margin="10" Height="35" Width="175">Choose CSV files path</Button>
        <Label>Enter/Choose Output Path(if empty, the path of this file's execution is used):</Label>
        <TextBox x:Name="Txtb_sel_output_path"></TextBox>
        <Button x:Name="Btn_sel_output_path" Click="Btn_sel_output_path_Click" Margin="10" Height="35" Width="175">Choose output Path</Button>
        <Button x:Name="Btn_combine_csvs" Click="Btn_combine_csvs_Click" IsEnabled="False" Margin="10" Height="35" Width="175">Combine CSVs</Button>
    </StackPanel>
</Window>
