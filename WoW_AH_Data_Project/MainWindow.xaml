<Window x:Class="WoW_AH_Data_Project.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WoW_AH_Data_Project"
        mc:Ignorable="d"
        Title="TSM AppData.lua to csv converter" Height="450" Width="800">
    <StackPanel Margin="50">
        <Label HorizontalAlignment="Center">Choose what to do</Label>
        <Button x:Name="Btn_choose_lua_conv" Click="Btn_choose_lua_conv_Click" Margin="10" Height="35" Width="250">Create Recent and Regular Marketvalue CSVs</Button>
        <Button x:Name="Btn_choose_combine_csvs" Click="Btn_choose_combine_csvs_Click"  Margin="10" Height="35" Width="250">Combine Sales and Purchases CSVs</Button>
    </StackPanel>
</Window>
